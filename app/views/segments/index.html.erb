<h1>Listing segments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Conditions</th>
      <th>Model</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.name %></td>
        <td><%= segment.conditions.map { |c| "#{c[0]} #{c[1]} #{c[2]}"}.join(", ") %></td>
        <td><%= segment.model %></td>
				<td><%= segment.segmentizations_count %></td>
        <td><%= link_to 'Show', segment %></td>
        <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
        <td><%= link_to 'Destroy', segment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

