<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Description</th>
      <th>Data</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.contact.key.capitalize %> was <%= event.full_description.downcase %></td>
        <td><%= link_to 'Show', contact_event_path(event.contact, event) %></td>
        <td><%= link_to 'Edit', edit_contact_event_path(event.contact, event) %></td>
        <td><%= link_to 'Destroy', contact_event_path(event.contact, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>