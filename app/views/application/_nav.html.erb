<div class="topbar<%= " topbar_placeholder" if placeholder %>">
  <div class="wide_container">
		<%= link_to image_tag("/imgs/logo.png"), root_path, id: "logo" %>
		<%= link_to image_tag("/imgs/loading_logo.gif"), root_path, id: "loading_logo" %>
  
		<% if current_user %>

	    <ul class="left_nav nav">
				<li><%= link_to "Overview", root_path, class: "#{"selected" if request.path == root_path}" %></li>
				<li><%= link_to "Events", events_path, class: "#{"selected" if request.path == events_path}" %></li>
				<li><%= link_to "Contacts", contacts_path, class: "#{"selected" if request.path == contacts_path}" %></li>
			
				<% if current_user.allowed_to_email? %>
					<li><%= link_to "New Message", new_message_path, class: "#{"selected" if request.path == new_message_path}" %></li>
					<!--<li><%= link_to "Messages", messages_path, class: "#{"selected" if request.path == messages_path}" %></li>-->
				<% end %>
	    </ul>
  
	    <ul class="right_nav nav">
				<li><%= link_to "My Account", edit_user_registration_path, class: "#{"selected" if request.path == edit_user_registration_path}" %></li>
	    </ul>
			
		<% end %>
  
    <div class="clear"></div>
  </div>
</div>